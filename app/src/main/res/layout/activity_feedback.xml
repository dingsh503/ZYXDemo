<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/feedback_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="意见反馈"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/feedback_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/feedback_title"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="漩涡鸣人" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="旗木卡卡西" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="宇智波鼬" />
    </RadioGroup>

    <EditText
        android:id="@+id/feedback_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#f5f5f9"
        android:layout_below="@+id/feedback_rg"
        android:enabled="true"
        android:gravity="top"
        android:hint="请输入..."
        android:inputType="textMultiLine"
        android:maxLength="256"
        android:maxLines="10"
        android:minLines="8"
        android:padding="5dp"
        android:scrollbars="none"
        android:textColor="#202025"
        android:textColorHint="#ccccd2"
        android:textSize="15sp" />

    <Button
        android:id="@+id/feedback_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:layout_margin="20dp"
        android:layout_below="@+id/feedback_et"/>

    <TextView
        android:id="@+id/feedback_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:layout_below="@+id/feedback_btn"/>

</RelativeLayout>
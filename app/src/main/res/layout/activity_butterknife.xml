<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/butterknife_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是一个Button"/>

    <TextView
        android:id="@+id/butterknife_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/bgYellow"
        android:gravity="center"
        android:padding="10dp"
        android:text="我是一个TextView"/>

    <Button
        android:id="@+id/butterknife_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="长按我"/>
    <TextView
        android:id="@+id/butterknife_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我也还是一个TextView"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"/>


</LinearLayout>